<% if notice %>
<p id="notice">
    <%= notice %>
</p>
<% end %>
<h1 class="text-center">Detail Tool</h1>
<br>
<br>
<div class="container">
    <div class="row">
        <div class="col-4">
            <div class="image-ustensil">
                <%= image_tag @tool.picture, alt: "Responsive image", class: "img-fluide"   %>
